{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2019",
    
    "removeComments": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "sourceMap": true,

    "outDir": "out/"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}