{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "array-bracket-spacing": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"]
  }
}